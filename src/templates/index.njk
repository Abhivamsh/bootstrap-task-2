{% extends "layout.njk" %}

{% block title %}{{ title }} - Home{% endblock %}

{% block content %}
    <!-- Hero Carousel -->
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="carousel-slide bg-gradient-primary">
                    <div class="container">
                        <div class="row align-items-center min-vh-100">
                            <div class="col-lg-6 text-white hero-content">
                                <h1 class="display-4 fw-bold mb-4 animate-on-scroll">Welcome to Abhivamsh!</h1>
                                <p class="lead mb-4">Riding the digital wave with innovative web solutions, modern design, and cutting-edge technology.</p>
                                <a href="./about.html" class="btn btn-light btn-lg me-3">Learn More</a>
                                <a href="./contact.html" class="btn btn-outline-light btn-lg">Let's Talk</a>
                            </div>
                            <div class="col-lg-6">
                                <div class="text-center">
                                    <i class="bi bi-laptop display-1 text-white opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-slide bg-gradient-success">
                    <div class="container">
                        <div class="row align-items-center min-vh-100">
                            <div class="col-lg-6 text-white hero-content">
                                <h1 class="display-4 fw-bold mb-4">Responsive Design</h1>
                                <p class="lead mb-4">Creating websites that work beautifully across all devices - from desktop to mobile.</p>
                                <a href="./about.html" class="btn btn-light btn-lg">View My Work</a>
                            </div>
                            <div class="col-lg-6">
                                <div class="text-center">
                                    <i class="bi bi-phone display-1 text-white opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="carousel-slide bg-gradient-info">
                    <div class="container">
                        <div class="row align-items-center min-vh-100">
                            <div class="col-lg-6 text-white hero-content">
                                <h1 class="display-4 fw-bold mb-4">Clean & Modern</h1>
                                <p class="lead mb-4">Building with the latest technologies and best practices for optimal performance.</p>
                                <a href="./contact.html" class="btn btn-light btn-lg">Start a Project</a>
                            </div>
                            <div class="col-lg-6">
                                <div class="text-center">
                                    <i class="bi bi-code-square display-1 text-white opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Skills Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                    <h2 class="display-5 fw-bold text-dark">What We Do</h2>
                    <p class="lead text-muted">Our expertise in creating digital waves</p>
                </div>
            </div>
            <div class="row g-4">
                <!-- Skill 1 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-code-slash fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">Frontend Development</h5>
                            <p class="card-text text-muted">Creating beautiful, interactive user interfaces using modern HTML, CSS, and JavaScript frameworks.</p>
                        </div>
                    </div>
                </div>
                <!-- Skill 2 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-phone fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">Responsive Design</h5>
                            <p class="card-text text-muted">Ensuring your website looks perfect on every device, from smartphones to desktops.</p>
                        </div>
                    </div>
                </div>
                <!-- Skill 3 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-speedometer2 fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">Performance</h5>
                            <p class="card-text text-muted">Optimizing code and assets for lightning-fast loading times and smooth user experience.</p>
                        </div>
                    </div>
                </div>
                <!-- Skill 4 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-palette fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">UI/UX Design</h5>
                            <p class="card-text text-muted">Designing intuitive interfaces that users love, with attention to detail and accessibility.</p>
                        </div>
                    </div>
                </div>
                <!-- Skill 5 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-danger bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-bootstrap fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">Bootstrap Expert</h5>
                            <p class="card-text text-muted">Deep knowledge of Bootstrap framework for rapid, consistent, and responsive development.</p>
                        </div>
                    </div>
                </div>
                <!-- Skill 6 -->
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center p-4">
                            <div class="bg-secondary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-github fs-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">Version Control</h5>
                            <p class="card-text text-muted">Proficient with Git and GitHub for collaborative development and project management.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h3 class="display-6 fw-bold mb-4">Ready to Start Your Project?</h3>
                    <p class="lead mb-4">Let's work together to bring your ideas to life with modern web technologies.</p>
                    <a href="./about.html" class="btn btn-light btn-lg me-3">Learn More</a>
                    <a href="./contact.html" class="btn btn-outline-light btn-lg">Get In Touch</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}